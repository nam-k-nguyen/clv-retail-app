<h2 style="text-align:center;">Retail Insights Dashboard</h2>

<h3>🧺 Average Spend by Household Size</h3>
<table border="1">
  <tr><th>HH Size</th><th>Avg Spend ($)</th></tr>
  <% spendBySize.forEach(r => { %>
    <tr><td><%= r.hh_size %></td><td><%= r.avg_spend %></td></tr>
  <% }) %>
</table>

<h3>🏷️ Units Sold by Brand Type</h3>
<table border="1">
  <tr><th>Brand Type</th><th>Total Units</th></tr>
  <% unitsByBrand.forEach(r => { %>
    <tr><td><%= r.brand_type %></td><td><%= r.total_units %></td></tr>
  <% }) %>
</table>

<h3>🎯 Loyalty Member vs Non-Member Spend</h3>
<table border="1">
  <tr><th>Loyalty Flag</th><th>Avg Spend ($)</th></tr>
  <% loyaltySpend.forEach(r => { %>
    <tr><td><%= r.loyalty_flag %></td><td><%= r.avg_spend %></td></tr>
  <% }) %>
</table>
